    body#page-top

        nav.navbar.navbar-expand-lg.navbar-dark.navbar-custom.fixed-top
            .container.px-5
                a.navbar-brand(href='#page-top')
                    img(src='assets/img/logo-light.png', alt='IntMix Software Solutions FZCO', width='50', height='50')
                    span.ms-2 IntMix Software Solutions FZCO
